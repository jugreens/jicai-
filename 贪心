//https://blog.csdn.net/qq_40916491/article/details/79944011
#include<bits/stdc++.h>
using namespace std;
int main()
{
	int t;
	cin>>t;
	int a[10010];
	while(t--)
	{
		int a1,b,n;
		cin>>a1>>b>>n;
		int i;
		int sum=0;
		for(i=0;i<n;i++)
		{
			cin>>a[i];
			int xb=0;
			int cha;
			if(a[i]>=2&&b>0)
			{
				xb=b*2;
				if(a[i]<=xb)
				{
					cha=a[i]/2;
					a[i]=a[i]%2;
					b=b-cha;
				}
				else
				{
					a[i]=a[i]-xb;
					b=0;
				}
			}
			sum+=a[i];	
		}
		if(b==0)
		{
			if(a1<sum)
			printf("No\n");
			else
			printf("Yes\n");
		}
		else if(b>0)
		{
			a1=a1+b;
			if(a1<sum)
			printf("No\n");
			else
			printf("Yes\n");
		}
	}
	return 0;
}
