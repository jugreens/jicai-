//upper_bound . lower_bound
//https://blog.csdn.net/qq_40875849/article/details/83053037

#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const int N = 1e6+10;
int dp[N];
int a[N];
int main()
{
    int n ;
    while(~scanf("%d",&n))
    {
        for(int i = 1 ; i <= n ; i++)
        {
            cin >> a[i];
            dp[i] = 0 ;
        }
        dp[1]=a[1];
        int len = 1 ;
        for(int i = 2 ; i <= n ; i++)
        {
            if(a[i]>=dp[len])
                dp[++len]=a[i];
            else
            {
                int j = upper_bound(dp+1,dp+len+1,a[i])-dp;
                dp[j]=a[i];
            }
        }
        cout << len <<endl;
    }
}
